{
    "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "indentWidth": 2,
            "quoteStyle": "single"
        }
    },
    "files": {
        "ignore": ["fixtures/applications/Symfony/var", "fixtures/applications/Symfony/vendor", "tools/", "vendor/"]
    }
}
